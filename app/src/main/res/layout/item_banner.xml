<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="330dp"
    app:cardCornerRadius="20dp"
    android:elevation="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner_photo"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="#00C853" />


        <TextView
            android:id="@+id/banner_description"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="my name is islom and im am 17 years old"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:drawableStart="@drawable/round_star_24"
            android:id="@+id/banner_reviews"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:text=" 10/11 IMDP"
            android:textColor="#B5AEAE"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>